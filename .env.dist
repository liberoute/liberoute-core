### Liberoute Default Configuration ###

# --- SYSTEM PATHS ---
# This is set automatically by the installer. Do not change.
SCRIPTS_DIR="__ABSOLUTE_PATH_TO_SCRIPTS__"

# --- CORE CONFIG ---
# The active group of profiles to use. This can be changed with 'liberoute select'.
ACTIVE_GROUP=default

# --- VPN JAIL CONFIG ---
# Leave GATEWAY, IP, and TUN_IP blank for auto-detection.
GATEWAY=
IP=
TUN_IP=

# --- These IPs will be used if the ones above are blank ---
AUTO_IP_1=198
AUTO_IP_2=199

NAME_SPACE=connection
CORE=sing-box

# --- INBOUND LISTENERS ---
# Define the listeners for sing-box. This is a JSON array.
INBOUNDS='[
  { "type": "mixed", "tag": "mixed-in", "listen": "0.0.0.0", "listen_port": 2801 }
]'

# --- TUNNEL JAIL CONFIG ---
TUN_NAME_SPACE=tunnel
TUN_DEVICE_NAME=tun0

# --- LOG MANAGEMENT ---
LOG_RETENTION_HOURS=24

# --- WHITELISTING ---
WHITELIST_COUNTRIES=ir

# --- DNS SERVERS ---
DNS_SERVERS=1.1.1.1,1.0.0.1,8.8.8.8,8.8.4.4

# --- SYSTEM BIN PATHS ---
# These are set automatically by the installer. Do not change.
IPTABLES=
IP6TABLES=

# --- DERIVED PATHS (DO NOT EDIT) ---
DATA_DIR=$SCRIPTS_DIR/data
PROFILES_DIR=$DATA_DIR/profiles
GEOIP_DIR=$DATA_DIR/geo
IPS_DIR=$DATA_DIR/ips
LIB_DIR=$SCRIPTS_DIR/lib
LOG_DIR=$SCRIPTS_DIR/logs
LAST_SELECTED_LINK_FILE=$DATA_DIR/.last_selected_link
CONFIG_DIR=$DATA_DIR/config

# --- LOG FILES (DO NOT EDIT) ---
TUN_LOG_FILE=$LOG_DIR/tunnel.log
CONNECTION_LOG_FILE=$LOG_DIR/connection.log
HEALTH_LOG_FILE=$LOG_DIR/health.log
LOG_CLEANER_LOG_FILE=$LOG_DIR/log-cleaner.log
WHITELIST_LOG_FILE=$LOG_DIR/whitelist.log
PROXY_LOG_FILE=$LOG_DIR/proxy.log

